# Database - Payload CMS uses DATABASE_URI, Prisma uses DATABASE_URL
DATABASE_URI=postgresql://democracy:democracy_pass@localhost:5432/democracy_db
DATABASE_URL=postgresql://democracy:democracy_pass@localhost:5432/democracy_db

# Payload CMS Secret (required for encryption)
PAYLOAD_SECRET=democracy-dev-secret-change-in-production

# SMTP for MailHog (local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@democracy-deutschland.de

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Payload CMS Admin User (auto-created on first start)
ADMIN_EMAIL=admin@democracy-deutschland.de
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# TOTP Two-Factor Authentication
# Enable or disable TOTP functionality globally (true/false)
TOTP_ENABLED=true
# Require TOTP for all admin users (true/false)
TOTP_REQUIRED=false
# Issuer name shown in authenticator apps
TOTP_ISSUER=DEMOCRACY Deutschland
# Number of backup codes to generate
TOTP_BACKUP_CODES_COUNT=8
# Token validity window (number of 30-second steps before/after to accept)
TOTP_WINDOW=1