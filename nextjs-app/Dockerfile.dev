# Development Dockerfile with pnpm pre-installed
FROM node:22-alpine

# Install tzdata for timezone support and set timezone to Europe/Berlin
RUN apk add --no-cache tzdata
ENV TZ=Europe/Berlin

# Install pnpm globally
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set working directory
WORKDIR /app

# Copy the packages directory first (for local plugin)
COPY packages /packages

# Copy package files for dependency installation
COPY nextjs-app/package.json nextjs-app/pnpm-lock.yaml nextjs-app/pnpm-workspace.yaml ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Environment variables
ENV NODE_OPTIONS=--no-deprecation
ENV NEXT_TELEMETRY_DISABLED=1

# Expose port
EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]
