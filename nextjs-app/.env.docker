# Docker-specific environment variables
# This file is used by docker-compose for the nextjs service

# Database - uses Docker internal network hostname
DATABASE_URI=postgresql://democracy:democracy_pass@postgres:5432/democracy_db
DATABASE_URL=postgresql://democracy:democracy_pass@postgres:5432/democracy_db

# Payload CMS Secret
PAYLOAD_SECRET=democracy-dev-secret-change-in-production

# SMTP - uses Docker internal network hostname for MailHog
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@democracy-deutschland.de

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Payload CMS Admin User (auto-created on first start)
ADMIN_EMAIL=admin@democracy-deutschland.de
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# TOTP Two-Factor Authentication
TOTP_ENABLED=true
TOTP_REQUIRED=true
TOTP_ISSUER=DEMOCRACY Deutschland
TOTP_BACKUP_CODES_COUNT=8
TOTP_WINDOW=1
